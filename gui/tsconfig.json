{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "build",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "jsx": "react",
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}